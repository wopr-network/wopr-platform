# wopr-platform staging environment variables.
#
# Use this file with the unified docker-compose.yml:
#   cp .env.staging.example .env.staging
#   docker compose --env-file .env.staging up -d
#
# The same docker-compose.yml is used for production and staging.
# Only this file differs.

# --- Domain ---
# Staging domain. Caddy provisions TLS for {DOMAIN} and api.{DOMAIN}.
DOMAIN=staging.wopr.network

# --- Stripe (test mode) ---
# Use Stripe test-mode keys from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_REPLACE_ME
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_ME
STRIPE_DEFAULT_PRICE_ID=price_REPLACE_ME

# --- Auth (better-auth) ---
# Secret for signing session cookies. Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=REPLACE_ME

# --- Email (Resend) ---
RESEND_API_KEY=re_REPLACE_ME
RESEND_FROM_EMAIL=noreply@wopr.network

# --- Cloudflare (optional â€” for Caddy DNS challenge behind proxied DNS) ---
CLOUDFLARE_API_TOKEN=

# --- Bot image ---
# Container image used when spawning tenant WOPR instances.
WOPR_BOT_IMAGE=ghcr.io/wopr-network/wopr:latest

# --- DO Spaces (backup storage) ---
S3_BUCKET=wopr-backups-staging
DO_SPACES_REGION=nyc3
DO_SPACES_ACCESS_KEY=REPLACE_ME
DO_SPACES_SECRET_KEY=REPLACE_ME
