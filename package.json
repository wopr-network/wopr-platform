{
  "name": "@wopr-network/wopr-platform",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "setup": "bash scripts/setup-dev.sh",
    "dev": "tsx src/index.ts",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "format": "biome format --write src/",
    "check": "biome check src/ && tsc --noEmit && npm run check:raw-sql",
    "check:raw-sql": "bash scripts/check-raw-sql.sh",
    "check:secrets": "bash scripts/check-hardcoded-secrets.sh",
    "bench": "vitest bench",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.15",
    "@hono/node-server": "^1.19.9",
    "@sentry/node": "^10.39.0",
    "@trpc/server": "^11.10.0",
    "better-auth": "^1.4.19",
    "better-sqlite3": "^12.6.2",
    "dockerode": "^4.0.9",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.12.2",
    "js-yaml": "^4.1.1",
    "lru-cache": "^11.2.6",
    "payram": "^1.0.1",
    "pg": "^8.19.0",
    "resend": "^6.9.2",
    "stripe": "^20.4.0",
    "winston": "^3.19.0",
    "ws": "^8.19.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/dockerode": "^4.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.3.2",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.9",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ],
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  }
}
